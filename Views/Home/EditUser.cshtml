@model RegisterUser;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">   
    <link rel="stylesheet" type="text/css" href="css/style.css" >
    <title>Edit User</title>
    <style>
        .container{
            margin-top: 100px;
            text-align: center;
        }
        body, html {
        height: 100%;
        margin: 0;
        font-family: Courier, monospace;
        }
    </style>
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="50">
    @* ******************This is the nav tabs on top of the page*************** *@
    <nav class="navbar-inverse navbar-fixed-top">
        <ul class="nav nav-tabs nav-left-justified">
            <li id="home" ><a data-toggle="tab" href="/main">Home</a></li>
            <li id="add"><a data-toggle="tab" href="/newrecipe">Add New Recipe</a></li>
            <li id="saved"><a data-toggle="tab" href="/savedRecipes">Saved Recipes</a></li>
            <li id="edit" class="active"><a data-toggle="tab" href="/editUser/@Model.UserId">Edit Profile</a></li>
            <li id="logout"><a data-toggle="tab" href="/logout">Log Out</a></li>
            <li style = "float: right;">
                <form class="navbar-form navbar-right" action="/action_page.php">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Search Recipes</button>
                </form>
            </li>
        </ul>
    </nav>  

    <div class="container">
        <h1>Edit your profile information</h1>
        <form asp-controller="Home" asp-action="EditThisUser" asp-route-userId="@Model.UserId" method="POST">
            <div class="form-group row">
                <span asp-validation-for="FirstName"></span>
                <label asp-for="FirstName">First Name: </label>
                <input type="text" asp-for="FirstName" placeholder="@Model.FirstName"/>
            </div>
            <div class="form-group row">
                <span asp-validation-for="LastName"></span>
                <label asp-for="LastName">Last Name: </label>
                <input type="text" asp-for="LastName" placeholder="@Model.LastName"/>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Email"></span>
                <label  asp-for="Email">Email: </label>
                <input type="text" asp-for="Email" placeholder="@Model.Email"/>
            </div>

            <div class="form-group row">
                <input type="submit" value= "Update Profile">
            </div>
        </form>

    </div>
    
</body>
</html>