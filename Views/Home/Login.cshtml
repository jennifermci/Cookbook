@model LoginUser;

<form asp-controller="Home" asp-action="LoginUser" method="POST">
    <div class="form-group row">
        <span asp-validation-for="LoginEmail"></span>   
        <label>Email</label>
        <input type="text" asp-for="LoginEmail"/>
    </div>
    <div class="form-group row">
        <label>Password</label>
        <input type="password" asp-for="LoginPassword"/> 
    </div>
    <div class="form-group row">
        <input type="submit" value= "Login">
    </div>   
    
</form>
